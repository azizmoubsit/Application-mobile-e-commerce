<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriesActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:id="@+id/app_bar_cat"
        android:layout_width="match_parent"
        android:theme="@style/Theme.Boutique.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_cat"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#121212"
            app:popupTheme="@style/Theme.Boutique.PopupOverlay">
            <ImageView
                android:id="@+id/close_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/homeAsUpIndicator"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Les catégories"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/dec"
        android:layout_below="@+id/app_bar_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Découvrez nos catégories"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/dec"
        android:id="@+id/card_mobiles"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:id="@+id/rl_mobiles"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#36C4C5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:text="Téléphones et Tablettes"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:foregroundGravity="center"
                android:src="@drawable/mobiles"
                android:layout_marginTop="57dp"
                android:layout_centerHorizontal="true"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_pc"
        android:layout_below="@+id/dec"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="15dp">
        <RelativeLayout
            android:id="@+id/rl_pc"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#36C4C5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/black"
                android:text="Ordinateurs"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:foregroundGravity="center"
                android:src="@drawable/laptops"
                android:layout_marginRight="40dp"
                android:layout_marginTop="47dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_tv"
        android:layout_below="@+id/card_mobiles"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="15dp">
        <RelativeLayout
            android:id="@+id/rl_tv"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#36C4C5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/black"
                android:text="Télévisions"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:foregroundGravity="center"
                android:src="@drawable/tv"
                android:layout_marginRight="40dp"
                android:layout_marginTop="47dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_clothes"
        android:layout_below="@+id/card_mobiles"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp">
        <RelativeLayout
            android:id="@+id/rl_clothes"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#36C4C5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Vêtements"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:foregroundGravity="center"
                android:src="@drawable/tshirts"
                android:layout_marginTop="47dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_shoes"
        android:layout_below="@+id/card_clothes"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp">
        <RelativeLayout
            android:id="@+id/rl_shoes"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#36C4C5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Chaussures"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:foregroundGravity="center"
                android:src="@drawable/shoess"
                android:layout_marginTop="47dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_games"
        android:layout_below="@+id/card_clothes"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="15dp">
        <RelativeLayout
            android:id="@+id/rl_games"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#36C4C5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:text="Jeux vidéo et consoles"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:foregroundGravity="center"
                android:src="@drawable/games"
                android:layout_marginTop="54dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_accessory"
        android:layout_below="@+id/card_shoes"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp">
        <RelativeLayout
            android:id="@+id/rl_accessory"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#36C4C5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Accessoire mode"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:foregroundGravity="center"
                android:src="@drawable/watches"
                android:layout_marginTop="44dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>